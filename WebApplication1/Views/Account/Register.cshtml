
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        
        <div class="col-md-12">
            @if (TempData["Success"] != null)
            {

                <div id="Success" class="alert-success" role="alert">
                    @TempData["Success"]
                </div>

            }
            @if (TempData["Error"] != null)
            {

                <div id="Error" class="alert-danger" role="alert">
                    @TempData["Error"]
                </div>

            }
            <br />
            <div class="main-card mb-3 card">
                <div class="card-header">
                    Register New Users

                </div>
                <div class="card-body">
                    <form action="~/Account/Register" method="post" class="form-group" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-3">
                                <label>Name</label>
                                <input type="text" name="UserName" placeholder="Name" class="form-control" required />
                            </div>

                            <div class="col-md-3">
                                <label>Email</label>
                                <input type="email" name="Email" placeholder="Email" class="form-control" required />
                            </div>
                            <div class="col-md-3">
                                <label>Password</label>
                                <input type="password" name="Password" placeholder="Password" class="form-control" required />
                            </div>
                            <div class="col-md-3">
                                <label>Image</label>
                                <input type="file" name="file" class="form-control-file" required />
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-3">
                                <input type="submit" value="Register" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>

                <div class="form-row">
                    <div class="col-lg-12">
                        <div class="main-card mb-3 card">
                            <div class="card-body">
                                <h5 class="card-title">Registered User</h5>
                                <table class="mb-0 table table-bordered">
                                    <thead>
                                        <tr>

                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Image</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (TempData["Data"] != null)
                                        {
                                            foreach (var E in (List<WebApplication1.UserProfile>)TempData["Data"])
                                            {
                                                <tr>

                                                    <td>@E.UserName</td>
                                                    <td>@E.Email</td>
                                                    <td><img src="~/UserImage/@E.Image" width="55" height="55" /></td>
                                                    <td>
                                                        |<a href="@Url.Action("UpdateUser", "Account", new { id = E.UserId })" title="Edit Data"><i class="fa fa-edit text-default"></i></a>|
                                                        |<a href="@Url.Action("DeleteUser", "Account", new { id = E.UserId })" title="Delete Data"><i class="fa fa-trash text-danger"></i></a>|
                                                    </td>

                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                               
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
  