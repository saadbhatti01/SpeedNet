                    <th scope="row">2</th>
                    <td>John</td>
                    <td>Yarks</td>
                    <td>New York</td>
                    <td>20/01/2020</td>
                    <td>200$</td>
                    <td>30/01/2020</td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>John</td>
                    <td>Yarks</td>
                    <td>New York</td>
                    <td>20/01/2020</td>
                    <td>200$</td>
                    <td>30/01/2020</td>
                </tr>*@
                                                    </tbody>
                                        </table>
                                    </div>


                        </div>
                    </div>
                </div>
            </div>

            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function () {
        setTimeout(function () {
            $("#Success").fadeOut();
        }, 5000);
    });
    $(document).ready(function () {
        setTimeout(function () {
            $("#Error").fadeOut();
        }, 5000);
    });
    $(document).ready(function () {
        setTimeout(function () {
            $("#Warning").fadeOut();
        }, 5000);
    });

</script>

<script type="text/javascript">
    $(function () {

        $("#TypeId").change(function () {

            var SubId = $(this).val();

            if (SubId !== "") {
                $.post("@Url.Action("GetSubsAmount", "MainDashboard")?subsId=" + SubId, function (res) {
                    if (res.Success === "true") {
                        //disabled the text boxes and set the value
                        $("#Amount").prop('readonly', true).val(res.Data.Amount);
                    }
                    if (res.Success === "No") {
                        alert("No Record Found");
                        $("#Amount").prop('readonly', false).val(res.Data.Clear);
                    }
                    if (res.Success === "Id") {
                        alert("There is some error to getting amount!");
                        $("#Amount").prop('readonly', false).val(res.Data.Clear);
                    }
                });
            } else {
                //Let's clear the values and disable :)
                $("#Amount").prop('readonly', true).val(res.Data.Clear);
            }

        });
    });

</script>