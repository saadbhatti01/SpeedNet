@model WebApplication1.ClientsView
@{
    ViewBag.Title = "EditClientsGridView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (TempData["Success"] != null)
{
    <div id="Success">
        <div class="alert alert-success fade show" role="alert">
            @TempData["Success"]
        </div>
    </div>

}
@if (TempData["Error"] != null)
{
    <div id="Error">
        <div class="alert alert-danger fade show" role="alert">
            @TempData["Error"]
        </div>
    </div>
}

@if (TempData["Failed"] != null)
{
    <div id="Error">
        <div class="alert alert-danger fade show" role="alert">
            @TempData["Failed"]
        </div>
    </div>
}

@using (Html.BeginForm("UpdateClientsGridView", "MainDashboard", FormMethod.Post))
{
    <div class="tab-content">
        <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <h5 class="card-title">Update Client </h5>
                    <form class="">
                        <div class="form-row">
                            <div class="col-md-6">
                                @Html.HiddenFor(m => m.Id)
                                <div class="position-relative form-group">
                                    @Html.TextBoxFor(m => m.Name, "", new { @type = "text", placeholder = "Enter Name at here ", @class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="position-relative form-group">
                                    @Html.TextBoxFor(m => m.Location, "", new { @type = "text", placeholder = "Enter Location at here ", @class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(m => m.Location, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="position-relative form-group">
                                    @Html.DropDownListFor(m => m.Type, (SelectList)ViewData["EshtiracksTypes"], new { @type = "text", placeholder = "Enter Type at here ", @class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(m => m.Type, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="position-relative form-group">
                                    @Html.TextBoxFor(m => m.Date, (string)ViewBag.Tdate, new { @type = "Date", placeholder = "Enter Date at here ", @class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(m => m.Date, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="position-relative form-group">
                                    @Html.TextBoxFor(m => m.Amount, "", new { @type = "number", placeholder = "Enter Amount at here ", @class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="position-relative form-group">
                                    @Html.TextBoxFor(m => m.FullPaymentuptodate, (String)ViewBag.FDate, new { @type = "Date", placeholder = "Enter Date at here ", @class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(m => m.FullPaymentuptodate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <button class="mt-2 btn btn-primary">Update</button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </div>

}

<script>
    $(document).ready(function () {
        setTimeout(function () {
            $("#Success").fadeOut();
        }, 5000);
    });
    $(document).ready(function () {
        setTimeout(function () {
            $("#Error").fadeOut();
        }, 5000);
    });

</script>