@using System.Data
@model DataSet
@{
    ViewBag.Title = "Recappermonth";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Success"] != null)
{
    <div id="Success">
        <div class="alert alert-success fade show" role="alert">
            @TempData["Success"]
        </div>
    </div>

}
@if (TempData["Error"] != null)
{
    <div id="Error">
        <div class="alert alert-danger fade show" role="alert">
            @TempData["Error"]
        </div>
    </div>
}

@if (TempData["Failed"] != null)
{
    <div id="Error">
        <div class="alert alert-danger fade show" role="alert">
            @TempData["Failed"]
        </div>
    </div>
}

@using (Html.BeginForm("Recappermonth", "RecapPages", FormMethod.Post))
{
    <div class="tab-content">
        <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <h5 class="card-title">Recap Per Month </h5>
                    <div class="main-card mb-3 card">
                        <div class="card-body">
                            @*<h5 class="card-title"> Add Expense </h5>*@
                            <form class="">
                                <div class="form-row">
                                    <div class="col-md-6">
                                        <div class="position-relative form-group">
                                            @Html.Label("Month", "Select Month")
                                            @Html.DropDownList("Month", (IEnumerable<SelectListItem>)ViewData["GetMonth"], "Select Month", new { @type = "text", placeholder = "Enter Month at here ", @class = "form-control", required = "required" })
                                            @Html.ValidationMessage("Month", "", new { @class = "text-danger" })
                                        </div>
                                    </div>


                                </div>


                                <a href="~/RecapPages/Recapperclient"><button class="mt-2 btn btn-primary">Preview</button></a>
                            </form>
                        </div>
                    </div>
                    <form class="">
                        <div class="form-row">
                            <div class="col-lg-12">
                                <div class="main-card mb-3 card">
                                    <div class="card-body">
                                        @*<h5 class="card-title">Client,s View</h5>*@
                                        <table class="mb-0 table table-bordered">
                                            <thead>
                                                <tr>

                                                    <th>Month</th>
                                                    <th>Income</th>
                                                    <th>Expense</th>
                                                    <th>Net Amount</th>
                                                    @*<th>Date</th>
                                                        <th>Due Amount</th>
                                                        <th>Full Amount Paid Upto Date</th>*@
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (DataRow row in Model.Tables[0].Rows)
                                                {
                                                    <tr>
                                                        <td>@row["Month"]</td>
                                                        <td>@row["Income"]</td>
                                                        <td>@row["Expense"]</td>
                                                        <td>@row["NetAmount"]</td>
                                                    </tr>
                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

}


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function () {
        setTimeout(function () {
            $("#Success").fadeOut();
        }, 5000);
    });
    $(document).ready(function () {
        setTimeout(function () {
            $("#Error").fadeOut();
        }, 5000);
    });
    $(document).ready(function () {
        setTimeout(function () {
            $("#Warning").fadeOut();
        }, 5000);
    });

</script>
