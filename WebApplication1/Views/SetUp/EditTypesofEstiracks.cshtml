@model WebApplication1.EshtiracksType
@{
    ViewBag.Title = "Edit Types of Estiracks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Success"] != null)
{
    <div id="Success">
        <div class="alert alert-success fade show" role="alert">
            @TempData["Success"]
        </div>
    </div>

}
@if (TempData["Error"] != null)
{
    <div id="Error">
        <div class="alert alert-danger fade show" role="alert">
            @TempData["Error"]
        </div>
    </div>
}

@if (TempData["Failed"] != null)
{
    <div id="Error">
        <div class="alert alert-danger fade show" role="alert">
            @TempData["Failed"]
        </div>
    </div>
}

@using (Html.BeginForm("UpdateTypesofEstirack", "SetUp", FormMethod.Post))
{

    <div class="tab-content">
        <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <h5 class="card-title">Update Subscription</h5>
                    @if (TempData["Success"] != null)
                    {

                        <div class="alert-success" role="alert">
                            @TempData["Success"]
                        </div>

                    }
                    <form class="">
                        <div class="form-row">
                            @Html.HiddenFor(m => m.Id)
                            <div class="col-md-6">
                                <div class="position-relative form-group">
                                    @Html.TextBoxFor(m => m.Description, Model.Description, new { @type = "text", placeholder = "Enter Description at here ", @class = "form-control", required = "required" })
                                    @*@Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })*@
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="position-relative form-group">
                                    @Html.TextBoxFor(m => m.Amount, Model.Amount.ToString(), new { @type = "number", placeholder = "Enter Amount at here ", @class = "form-control", required = "required" })
                                    @*@Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })*@

                                </div>
                            </div>
                        </div>
                        <button class="mt-2 btn btn-primary">Update</button>
                    </form>
                </div>

            </div>

        </div>
    </div>
}

<script>
    $(document).ready(function () {
        setTimeout(function () {
            $("#Success").fadeOut();
        }, 5000);
    });
    $(document).ready(function () {
        setTimeout(function () {
            $("#Error").fadeOut();
        }, 5000);
    });

</script>
