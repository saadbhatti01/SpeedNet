@model WebApplication1.EshtiracksType
@{
    ViewBag.Title = "Types of Subscriptions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Success"] != null)
{
    <div id="Success">
        <div class="alert alert-success fade show" role="alert">
            @TempData["Success"]
        </div>
    </div>

}
@if (TempData["Error"] != null)
{
    <div id="Error">
        <div class="alert alert-danger fade show" role="alert">
            @TempData["Error"]
        </div>
    </div>
}

@if (TempData["Failed"] != null)
{
    <div id="Error">
        <div class="alert alert-danger fade show" role="alert">
            @TempData["Failed"]
        </div>
    </div>
}



@using (Html.BeginForm("TypesofEstiracks", "SetUp", FormMethod.Post))
{

    <div class="tab-content">
        <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <h5 class="card-title"> Add Subscription</h5>

                    <form class="">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="position-relative form-group">
                                    @Html.TextBoxFor(m => m.Description, " ", new { @type = "text", placeholder = "Enter Description at here ", @class = "form-control", required = "required", title = "Enter Description" })
                                    @*@Html.ValidationMessageFor(m => m.Description)*@
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="position-relative form-group">
                                    @Html.TextBoxFor(m => m.Amount, " ", new { @type = "number", placeholder = "Enter Amount at here ", @class = "form-control", required = "required" })
                                    @*@Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })*@

                                </div>
                            </div>
                        </div>
                        <button class="mt-2 btn btn-primary">Add</button>
                    </form>
                </div>
                <div class="form-row">
                    <div class="col-lg-12">
                        <div class="main-card mb-3 card">
                            <div class="card-body">
                                <h5 class="card-title">Types of Subscription</h5>
                                <table class="mb-0 table table-bordered">
                                    <thead>
                                        <tr>

                                            <th>Description</th>
                                            <th>Amount</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (TempData["TypesofSubsription"] != null)
                                        {
                                            foreach (var E in (List<WebApplication1.EshtiracksType>)TempData["TypesofSubsription"])
                                            {
                                                <tr>

                                                    <td>@E.Description</td>
                                                    <td>@E.Amount</td>
                                                    <td>
                                                        |<a href="@Url.Action("EditTypesofEstiracks", "SetUp", new { id = E.Id })"><i class="fa fa-edit text-default"></i></a>|
                                                        |<a href="@Url.Action("DeleteEstriacksTypes", "SetUp", new { id = E.Id })"><i class="fa fa-trash text-danger"></i></a>|
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                                @*<div class="modal fade" id="basic" tabindex="-1" role="banner" aria-hidden="true" style="display: none;">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                                    <h4 class="modal-title">Delete Confirmation</h4>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to delete this item?
                                                </div>
                                                <div class="modal-footer">
                                                    <button data-dismiss="modal" type="button" class="btn btn-default">Cancel</button>
                                                    <button id="btnContinueDelete" type="button" class="btn btn-primary">Delete</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>*@
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function () {
        setTimeout(function () {
            $("#Success").fadeOut();
        }, 5000);
    });
    $(document).ready(function () {
        setTimeout(function () {
            $("#Error").fadeOut();
        }, 5000);
    });

</script>
